layout: 'layout.liquid'
---

<div class="-card-layout-1-3-wrapper">

    <div class="-card-layout-1-3">
    
        {% for post in collections.posts reversed %}
    
            <div class="-card-1-3 p-2 space-y-4 bg-s-t1a3 "> 
    
                
                <img class="-card-img-1-3" src="{{post.data.img}}  alt="{{post.data.imgAlt}}">
               
    
                <p class="font-semibold">
                    <a href="{{ post.url }}">
                        {{ post.data.title  }}
                    </a>
                </p>


                <h5 class="text-l1-a2">
                 
                    {{ post.data.date | date: " %b %d, %Y"}}
                       
                </h5>

               <p>    {{ post.data.article | truncate: 50}}
            </p>
            


            

              
              
              
       
       
            </div> 
    
      {% endfor %}
    
    
    </div>
    
 </div>   
    
    
    
    




